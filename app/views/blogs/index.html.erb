<div class="container">
    <div class="row">
      <h2>ブログ一覧</h2>
      <div><%= link_to '新規作成', new_blog_path %></div>
      <div class="btn btn-logout">
        <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
      </div>
      <% @blogs.each do |blog| %>
            <div class="col-md-6 col-md-offset-3">
              <div class="blog-index-single">
                <h2 class="blog-author">
                  <%= blog.user.name %>
                </h2>
                <p class="blog-text">
                  <%= blog.text %>
                </p>
              </div>
            </div>
      <% end %> 
    </div>
</div>